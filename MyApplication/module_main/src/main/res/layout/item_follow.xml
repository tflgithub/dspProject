<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_follow_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="7dp"
        android:src="@drawable/touxiang_moren" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_follow_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拉布拉卡"
            android:textColor="@color/blackText2"
            android:textSize="@dimen/textSize16" />

        <TextView
            android:id="@+id/tv_follow_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12粉丝"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize14" />

    </LinearLayout>

    <Button
        android:id="@+id/main_up_man_btn_follow"
        android:layout_width="56dp"
        android:layout_height="28dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_btn_accent_color"
        android:text="关注"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize14" />
</LinearLayout>