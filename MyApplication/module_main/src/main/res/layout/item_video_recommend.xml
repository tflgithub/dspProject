<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#96000000"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_height="335dp" >

        <ImageView
            android:id="@+id/main_video_thumb"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/main_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
        android:typeface="monospace"
        android:textColor="@color/blackText"
        android:textSize="@dimen/textSize14"
        app:layout_constraintTop_toBottomOf="@id/player_container" />


    <ImageView
        android:id="@+id/main_iv_avatar"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/touxiang_moren"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_tv_title" />

    <TextView
        android:id="@+id/main_tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:textColor="@color/blackText1"
        android:textSize="@dimen/textSize13"
        app:layout_constraintLeft_toRightOf="@+id/main_iv_avatar"
        app:layout_constraintTop_toBottomOf="@id/main_tv_title"
        android:text="乐滋滋" />

    <!--<Button-->
        <!--android:id="@+id/main_btn_follow"-->
        <!--android:layout_width="56dp"-->
        <!--android:layout_height="25dp"-->
        <!--android:layout_marginRight="26dp"-->
        <!--android:background="@drawable/shape_btn_accent_color"-->
        <!--android:text="关注"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="@dimen/textSize14"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@id/main_tv_title" />-->


    <TextView
        android:id="@+id/main_tv_dz_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
        android:drawableLeft="@drawable/ic_like_small"
        android:textSize="@dimen/textSize10"
        android:gravity="center"
        android:drawablePadding="7dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="26dp"
        app:layout_constraintTop_toBottomOf="@id/main_iv_avatar" />


    <TextView
        android:id="@+id/main_tv_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
        android:drawableLeft="@drawable/ic_comment_small"
        android:textSize="@dimen/textSize10"
        android:gravity="center"
        android:drawablePadding="7dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_iv_avatar"/>


    <TextView
        android:id="@+id/main_tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/dp10"
        android:text="分享"
        android:drawablePadding="7dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_share_small"
        app:layout_constraintTop_toBottomOf="@id/main_iv_avatar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="26dp" />


</android.support.constraint.ConstraintLayout>