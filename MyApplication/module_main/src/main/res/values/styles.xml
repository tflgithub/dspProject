<resources xmlns:tools="http://schemas.android.com/tools">



    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--窗体无标题栏-->
        <item name="windowNoTitle">true</item>
        <!--&lt;!&ndash;无actionbar&ndash;&gt;-->
        <item name="windowActionBar">false</item>
        <!--取消状态栏,也就是全屏显示-->
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="inputDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <!--背景-->
        <item name="android:windowFrame">@null</item>
        <!--设置无边框-->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
        <!--显示软件盘-->
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>




    <style name="adIcon">
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/flplayer_shape_back_bg</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="adText">
        <item name="android:background">@drawable/shape_ad_bg</item>
        <item name="android:textSize">@dimen/controller_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/bg_smile_face</item>
    </style>

</resources>
