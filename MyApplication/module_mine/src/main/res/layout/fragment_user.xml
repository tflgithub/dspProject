<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/mine_user_avatar"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/icon_xitongtongzhi" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mine_user_avatar"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/mine_edit_base_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/icon_edit"
                    android:text="乐滋滋"
                    android:textColor="@color/blackText2"
                    android:textSize="@dimen/textSize22" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="绑定手机号:  13419489381"
                    android:textColor="@color/blackText2"
                    android:textSize="@dimen/textSize11" />


                <TextView
                    android:id="@+id/mine_user_update_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_btn_color_bg"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="更换手机号码"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textSize11" />

            </LinearLayout>

        </RelativeLayout>


        <View
            style="@style/HorizontalLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="暂无签名"
            android:textColor="@color/blackText1" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/sex_selector" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mine_user_follower_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_up_man_follower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300万"
                    android:textColor="@color/blackText2"
                    android:textSize="@dimen/textSize16" />

                <TextView
                    android:id="@+id/main_up_man_follower_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="right"
                    android:text="粉丝"
                    android:textColor="@color/blackText2"
                    android:textSize="@dimen/textSize12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_up_man_follow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/main_up_man_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="300万"
                    android:textColor="@color/blackText2"
                    android:textSize="@dimen/textSize16" />

                <TextView
                    android:id="@+id/main_up_man_follow_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="关注"
                    android:textColor="@color/blackText2"
                    android:textSize="@dimen/textSize12" />
            </LinearLayout>
        </LinearLayout>

        <com.luzuzu.library.widget.MultipleItemView
            android:id="@+id/mine_miv_message"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:leftIcon="@drawable/icon_tongzhi_mine"
            app:leftText="通知消息"
            app:rightIcon="@drawable/icon_general_back"
            app:showTopLine="false" />

        <com.luzuzu.library.widget.MultipleItemView
            android:id="@+id/mine_miv_feedback"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:leftIcon="@drawable/icon_feedback"
            app:leftText="意见反馈"
            app:rightIcon="@drawable/icon_general_back"
            app:showTopLine="false" />

        <com.luzuzu.library.widget.MultipleItemView
            android:id="@+id/mine_miv_setting"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:leftIcon="@drawable/icon_setting"
            app:leftText="设置"
            app:rightIcon="@drawable/icon_general_back"
            app:showBottomLine="false"
            app:showTopLine="false" />

    </LinearLayout>
</ScrollView>
